{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@fonts/*": ["./assets/fonts/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@libs/*": ["./src/libs/*"],
      "@screens/*": ["./src/screens/*"],
      "@stacks/*": ["./src/stacks/*"]
    },
    "skipLibCheck": true
  }
}
